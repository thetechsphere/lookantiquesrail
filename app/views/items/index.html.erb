<div class="jumbotron jumbotron_title">
  <div class="container">
    <h1>
      All Items:
    </h1> 
    <form class="form__container" action="" method="GET">

			<div id="FormObjects">

				<label for="STRING" class="search__disp">Search For: </label>
				<input class="search__bar" id="STRING" name="STRING" placeholder="Search" type="text">
				
				<label class="item__disp" for="numPerPage">Items Per Page: </label>
				<select id="numPerPage" name="numPerPage" class="class__context-selector">
					<option value="10">10</option>
					<option value="25">25</option>
					<option value="50">50</option>
					<option value="100">100</option>
				</select>
				
				<label class="sort__disp" for="SortBy">Sort By: </label>
				<select id="SortBy" name="SortBy" class="class__context-selector">
					<option value="endtime">Time Left</option>
					<option value="price">Price</option>
					<option value="title">Title</option>
				</select>
				
				<label class="sort__disp" for="SortDir">Sort Direction: </label>
				<select id="SortDir" name="SortDir" class="class__context-selector">
					<option value="ASC">Asc</option>
					<option value="DESC">Dec</option>
				</select>
				
        <label for="stock_category">Category:</label>
        <select name="category" id="stock_category"><option value="">Select One</option>
          <option value="Art">Art</option>
          <option value="Books">Books</option>
          <option value="Cameras">Cameras</option>
          <option value="Collectibles">Collectibles</option>
          <option value="Dinnerware">Dinnerware</option>
          <option value="Home Decor">Home Decor</option>
          <option value="Other">Other</option>
        </select>
        
        <label for="stock_subcategory">Subcategory:</label>
        <select name="subcategory" id="stock_subcategory">
          <option value="">Select One</option>
        </select>
				
				<input type="text" name="Submitted" value="true" hidden/>

				<button type="submit" class="search__context">SEARCH</button>
				
				<script>
				  $("#stock_category").change(function(){
            CatagoryChange();
          });
				</script>

			</div>
		</form>
  </div>
</div>


<% @stocks.each do |item| %>
  <div class="jumbotron jumbotron-br container">
    <div>
      <div class="grid">
        <div class="col-md-8">
          <h1>
            <%= link_to item.title, item_path(item.id)  %>
            <small>
              $<%= item.price %>
            </small>
          </h1>
          <span>Ends At: <%= item.endtime %></span>
          <h3 class="item-description">Details:</h3>
          <p>
            <%= item.description.gsub! '<br>', ' ' %>
          </p>
        </div>
        
        <div class="col-md-4">
          <img alt="<%= item.title %>" src="<%= item.imageurl %>" width="100%" style="border-radius: 5px;">
        </div>
      </div>
    </div>
  </div>
<% end %>