<div class="jumbotron">
  <div class="container">
    <%= form_for @buyantiques do |f| %>
      <div class="form-group">
        <%= f.label :nam, value: "Your Full Name: " %><span class="glyphicon glyphicon-asterisk" aria-hidden="true" style="color: red; font-size: 10px;"></span>
        <br>
        <%= f.text_field :name, class: "form-control", :required => true %>
      </div><div class="form-group">
        <%= f.label :email, value: "Your Email: " %><span class="glyphicon glyphicon-asterisk" aria-hidden="true" style="color: red; font-size: 10px;"></span>
        <br>
        <%= f.text_field :email, class: "form-control", :required => true %>
      </div><div class="form-group">
        <%= f.label :phonenumber, value: "Your Phonenumber (Optional): " %>
        <br>
        <%= f.text_field :phonenumber, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :title, value: "Item Name: " %><span class="glyphicon glyphicon-asterisk" aria-hidden="true" style="color: red; font-size: 10px;"></span>
        <br>
        <%= f.text_field :title, class: "form-control", :required => true %>
      </div>
      <div class="form-group">
        <%= f.label :askingprice, value: "Your Asking Price: " %><span class="glyphicon glyphicon-asterisk" aria-hidden="true" style="color: red; font-size: 10px;"></span>
        <br>
        <%= f.text_field :askingprice, class: "form-control", :required => true %>
      </div>
      <div class="form-group">
        <%= f.label :description, value: "Object Details: " %><span class="glyphicon glyphicon-asterisk" aria-hidden="true" style="color: red; font-size: 10px;"></span>
        <br>
        <%= f.text_area :description, class: "form-control", :required => true %>
      </div>
      <%= f.text_field :status, :value => "new", class: "form-control hidden", :required => true %>
      
      <%= f.submit :submit, value: "Send Item Info", class: "btn btn-success"%>
    <% end %>
  </div>
</div>