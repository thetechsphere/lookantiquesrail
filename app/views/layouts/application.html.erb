<html>
<head>
  <title>Look! Antiques</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Roboto:400,300,500,700' rel='stylesheet' type='text/css'>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  
  <nav class="navbar navbar__dark">
      <div class="container">
        <div class="navbar-header">
          <%= link_to 'Look! Antiques', root_path, class: "navbar-brand" %>
        </div>
        <div id="navbar">
          <ul class="nav navbar-nav">
            
            <li class="active"><%= link_to 'Homepage', root_path %></li>
            
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Categories <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Art', "items?STRING=&numPerPage=10&SortBy=endtime&SortDir=ASC&category=Art&subcategory=Select+One&Submitted=true" %></li>
                <li><%= link_to 'Books', "items?STRING=&numPerPage=10&SortBy=endtime&SortDir=ASC&category=Books&subcategory=Select+One&Submitted=true" %></li>
                <li><%= link_to 'Cameras', "items?STRING=&numPerPage=10&SortBy=endtime&SortDir=ASC&category=Cameras&subcategory=Select+One&Submitted=true" %></li>
                <li><%= link_to 'Collectables', "items?STRING=&numPerPage=10&SortBy=endtime&SortDir=ASC&category=Collectables&subcategory=Select+One&Submitted=true" %></li>
                <li><%= link_to 'Dinnerware', "items?STRING=&numPerPage=10&SortBy=endtime&SortDir=ASC&category=Dinnerware&subcategory=Select+One&Submitted=true" %></li>
                <li><%= link_to 'Home Decor', "items?STRING=&numPerPage=10&SortBy=endtime&SortDir=ASC&category=Home+Decor&subcategory=Select+One&Submitted=true" %></li>
              </ul>
            </li>
            
            <li><%= link_to 'List All', items_path %></li>
            
            <li><%= link_to 'We Buy Antiques!', buy_antiques_path %></li>
            
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
    
    <%= yield %>
    
    <div class="container col-lg-12" style="padding:0">
      <div class="footer footer__box-bottom">
        &copy; 2015 <%= link_to 'TheTechSphere', "http://www.thetechsphere.us/" %>
      </div>
    </div>

</body>
</html>
